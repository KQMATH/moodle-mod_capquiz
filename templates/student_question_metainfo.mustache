{{!
    @template mod_capquiz/student_question_metainfo

    Example context (json):
    {
        "metainfo": {
            "rating": {
                "student": 1500.0,
                "question": 1450.0
            },
            "question": {
                "capquiz_id": 46,
                "moodle_id": 71
            }
        }
    }
}}
{{#metainfo}}
    <table class="capquiz-attempt-metainfo">
        <tr>
            <td>
                {{#rating}}
                    <table>
                        <tr>
                            <td>
                                {{#str}}your_rating, capquiz{{/str}}:
                            </td>
                            <td>
                                {{ student }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{#str}}question_rating, capquiz{{/str}}:
                            </td>
                            <td>
                                {{ question }}
                            </td>
                        </tr>
                    </table>
                {{/rating}}
            </td>
            <td>
                {{#question}}
                    <table>
                        <tr>
                            <td>
                                CAPQuiz ID:
                            </td>
                            <td>
                                {{ capquiz_id }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Moodle ID:
                            </td>
                            <td>
                                {{ moodle_id }}
                            </td>
                        </tr>
                    </table>
                {{/question}}
            </td>
        </tr>
    </table>
{{/metainfo}}