{{!
    @template mod_capquiz/instructor_dashboard_summary

    Example context (json):
    {
        "published_status": "Published",
        "question_list_title": "My question list",
        "question_count": 15,
        "enrolled_student_count": 40
    }
}}
<h2>{{#str}} dashboard, capquiz {{/str}}</h2>
<div>
    <table class="capquiz-table">
        <tr>
            <td>
                {{#str}} status, capquiz {{/str}}:
            </td>
            <td>
                {{{published_status}}}
            </td>
        </tr>
        <tr>
            <td>
                {{#str}} question_list, capquiz {{/str}}:
            </td>
            <td>
                {{{question_list_title}}}
            </td>
        </tr>
        <tr>
            <td>
                {{#str}} question_count, capquiz {{/str}}:
            </td>
            <td>
                {{{question_count}}}
            </td>
        </tr>
        <tr>
            <td>
                {{#str}} enrolled_students, capquiz {{/str}}:
            </td>
            <td>
                {{{enrolled_student_count}}}
            </td>
        </tr>
    </table>
</div>
<br>
