{{#question}}
    <div class="capquiz-quiz-top">
        <div class="capquiz-quiz-stars">
            {{#student}}
                {{#stars}}
                    {{#.}}
                        {{#pix}} star, capquiz {{/pix}}
                    {{/.}}
                    {{^.}}
                        {{#pix}} blank-star, capquiz {{/pix}}
                    {{/.}}
                {{/stars}}
            {{/student}}
        </div>
    </div>
    {{#attempt}}
        <form class="capquiz-response-form" method="post" action="{{{ url }}}" enctype="multipart/form-data"
              accept-charset="utf-8">
            <div>
                <input type="hidden" name="slots" value="{{ slots }}">
                <input type="hidden" name="scrollpos" value="">
                {{{ body }}}
            </div>
        </form>
    {{/attempt}}
    {{#question}}
        Question rating: {{ rating }}
        Question ID: {{ id }}
    {{/question}}
    {{#student}}
        Your rating: {{ rating }}
    {{/student}}
{{/question}}