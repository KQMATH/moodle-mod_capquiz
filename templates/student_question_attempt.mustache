{{!
    @template mod_capquiz/student_question_attempt

    Example context (json):
    {
        "attempt": {
            "url": "#",
            "body": "raw html to render the question",
            "slots": ""
        },
        "gradingdone": true,
        "finalgrade": 2,
        "gradingpass": false
    }
}}
{{#gradingdone}}
    <p>{{#str}} grading_is_completed, capquiz {{/str}}</p>
    {{#gradingpass}}
        <p>{{#str}} grade_has_been_set_pass, capquiz, {{finalgrade}} {{/str}}</p>
    {{/gradingpass}}
    {{^gradingpass}}
        <p>{{#str}} due_date_grading, capquiz, {{duedate}} {{/str}}</p>
        <p>{{#str}} grade_has_been_set_fail, capquiz, {{finalgrade}} {{/str}}</p>
    {{/gradingpass}}
{{/gradingdone}}

{{#attempt}}
    <form class="capquiz-response-form" method="post" action="{{{ url }}}" enctype="multipart/form-data" accept-charset="utf-8">
        <div>
            <input type="hidden" name="slots" value="{{ slots }}">
            <input type="hidden" name="scrollpos" value="">
            {{{ body }}}
        </div>
    </form>
{{/attempt}}
