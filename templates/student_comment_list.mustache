{{!
    @template mod_capquiz/student_comment_list

    Example context (json):
    {
        "questions": [
            {
                "question": "Question name",
                "comments": [
                    {
                        "comment": "This is a comment.",
                        "student": "Firstname Lastname",
                        "time_submitted": "1560514441"
                    }
                ]
            }
        ]
    }
}}
<div class="capquiz-student-comment-list">
    <h2>{{#str}} feedback_from_students, capquiz {{/str}}</h2>
    {{#questions}}
        <div>
            <h3>{{question}}</h3>
            {{#comments}}
                <div>
                    <p>{{comment}}</p>
                    <i>{{#str}}
                        posted_by_student,
                        capquiz,
                        {{student}},
                        {{#userdate}}
                            {{time_submitted}}, %A, %d %B %Y, %I:%M %p
                        {{/userdate}}
                    {{/str}}</i>
                </div>
            {{/comments}}
        </div>
    {{/questions}}
</div>
