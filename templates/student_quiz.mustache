{{^published}}
    <h3>Not published.</h3>
{{/published}}
{{#completed}}
    <h3>You have completed this quiz.</h3>
{{/completed}}
{{#question}}
    {{#attempt}}
        <form class="capquiz-response-form" method="post" action="{{{ url }}}" enctype="multipart/form-data" accept-charset="utf-8">
            <div>
                <input type="hidden" name="slots" value="{{ slots }}">
                <input type="hidden" name="scrollpos" value="">
                {{{ body }}}
            </div>
        </form>
    {{/attempt}}
    {{#summary}}
        <h3>Your answer:</h3>
        <p>
            {{#response}}
                {{{ response }}}
            {{/response}}
            {{^response}}
                Response not registered.
            {{/response}}
        </p>
        <p>{{ feedback }}</p>
        {{#next}}
            <div>
                {{>core/single_button}}
            </div>
        {{/next}}
    {{/summary}}
{{/question}}