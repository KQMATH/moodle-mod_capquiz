{{!
    @template mod_capquiz/student_progress

    Example contexts:
    {
        "progress": {
            "student": {
                "up": {
                    "percent": 40
                },
                "stars": 3
            }
        }
    }
    {
        "progress": {
            "student": {
                "down": {
                    "percent": 20
                },
                "stars": 3
            }
        }
    }
}}
{{#progress}}
    <div class="capquiz-quiz-top">
        {{#student}}
            <div class="capquiz-quiz-progress">
                {{#up}}
                  <div class="capquiz-quiz-progress-fill"
                     style="width:{{ percent }}%">
                      <div class="capquiz-quiz-progress-percent">
                    {{ percent }}%
                      </div>
                  </div>
                {{/up}}
                {{#down}}
                  <div class="capquiz-quiz-progress-unfill"
                     style="width:{{ percent }}%">
                      <div class="capquiz-quiz-progress-percent">
                          -{{ percent }}%
                      </div>
                  </div>
                {{/down}}
            </div>
            <div class="capquiz-quiz-stars">
                {{#stars}}
                    {{#.}}
                        {{#pix}} star, capquiz {{/pix}}
                    {{/.}}
                    {{^.}}
                        {{#pix}} blank-star, capquiz {{/pix}}
                    {{/.}}
                {{/stars}}
            </div>
        {{/student}}
    </div>
{{/progress}}
