{{!
    @template mod_capquiz/question_list

    Example context:
    {
        "questions": [
            {
                "index": 1,
                "name": "First question",
                "rating": 500.0,
                "question_id": 56,
                "rating_url": "",
                "button": {
                    "primary": true,
                    "method": "post",
                    "url": "",
                    "label": "Remove"
                }
            }
        ],
        "message": "Message for the user"
    }
}}
<h2>{{#str}}question_list, capquiz{{/str}}</h2>

<table class="capquiz-tree">
    <tr>
        <th>#</th>
        <th>{{#str}}title, capquiz{{/str}}</th>
        <th>{{#str}}rating, capquiz{{/str}}</th>
        <th>{{#str}}action, capquiz{{/str}}</th>
    </tr>
    {{#questions}}
        <tr>
            {{#.}}
                <td>{{ index }}</td>
                <td>{{ name }}</td>
                <td>
                    <form method="post" class="capquiz-question-rating" name="question_rating_form" action="{{ rating_url }}">
                        <input type="number" name="rating" value="{{ rating }}" data-question-id="{{ question_id }}">
                        {{#pix}} t/check, core {{/pix}}
                    </form>
                </td>
                <td class="capquiz-question-rating-submit-wrapper">
                    {{#button}}
                        {{>core/single_button}}
                    {{/button}}
                </td>
            {{/.}}
        </tr>
    {{/questions}}
</table>

{{^questions}}
    {{#str}}no_questions_added_to_list, capquiz{{/str}}
{{/questions}}

{{#message}}
    {{{message}}}
{{/message}}
